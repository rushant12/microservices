package com.nedbank.kafka.filemanage.model;

import java.util.Date;
import java.util.List;

public class SummaryPayload {

    private String batchID;
    private HeaderInfo header;
    private MetadataInfo metadata;
    private PayloadInfo payload;
    private List<ProcessedFileInfo> processedFiles;
    private String summaryFileURL;
    private String timestamp = new Date().toString();

    // Getters
    public String getBatchID() {
        return batchID;
    }

    public HeaderInfo getHeader() {
        return header;
    }

    public MetadataInfo getMetadata() {
        return metadata;
    }

    public PayloadInfo getPayload() {
        return payload;
    }

    public List<ProcessedFileInfo> getProcessedFiles() {
        return processedFiles;
    }

    public String getSummaryFileURL() {
        return summaryFileURL;
    }

    public String getTimestamp() {
        return timestamp;
    }

    // Setters
    public void setBatchID(String batchID) {
        this.batchID = batchID;
    }

    public void setHeader(HeaderInfo header) {
        this.header = header;
    }

    public void setMetadata(MetadataInfo metadata) {
        this.metadata = metadata;
    }

    public void setPayload(PayloadInfo payload) {
        this.payload = payload;
    }

    public void setProcessedFiles(List<ProcessedFileInfo> processedFiles) {
        this.processedFiles = processedFiles;
    }

    public void setSummaryFileURL(String summaryFileURL) {
        this.summaryFileURL = summaryFileURL;
    }

    public void setTimestamp(String timestamp) {
        this.timestamp = timestamp;
    }
}
